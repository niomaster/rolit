public class Vector {

    private int y;
    private int x;

    public Vector(int x, int y){
        this.x = x;
        this.y = y;
    }

    public int getX(){
        return x;
    }

    public int getY(){
        return y;
    }


    public Vector add(Vector direction) {
        Vector result = new Vector(this.getX() + direction.getX(), this.getY() + direction.getY());
        return result;
    }

    public Vector runVector(Vector vector){
        int x = vector.getX();
        int y = vector.getY();
        return new Vector(x,y);
    }
}
